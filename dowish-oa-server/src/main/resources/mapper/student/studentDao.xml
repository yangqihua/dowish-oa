<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.dowish.modules.student.dao.StudentDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="net.dowish.modules.student.entity.StudentEntity" id="studentMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="address" column="address"/>
        <result property="createUserId" column="create_user_id"/>
    </resultMap>

	<select id="queryObject" resultType="net.dowish.modules.student.entity.StudentEntity">
		select * from student where id = #{value}
	</select>

	<select id="queryList" resultType="net.dowish.modules.student.entity.StudentEntity">
		select student.* from student student WHERE 1=1
		<if test="id != null">
			and student.`id` like concat('%',#{id},'%')
		</if>
		<if test="name != null">
			and student.`name` like concat('%',#{name},'%')
		</if>
		<if test="address != null">
			and student.`address` like concat('%',#{address},'%')
		</if>
		<if test="createUserId != null">
			and student.`create_user_id` like concat('%',#{createUserId},'%')
		</if>
		${sqlFilter}
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from student 
	</select>
	 
	<insert id="save" parameterType="net.dowish.modules.student.entity.StudentEntity">
		insert into student
		(
			`id`, 
			`name`, 
			`address`, 
			`create_user_id`
		)
		values
		(
			#{id}, 
			#{name}, 
			#{address}, 
			#{createUserId}
		)
	</insert>
	 
	<update id="update" parameterType="net.dowish.modules.student.entity.StudentEntity">
		update student 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="address != null">`address` = #{address}, </if>
			<if test="createUserId != null">`create_user_id` = #{createUserId}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from student where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from student where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>