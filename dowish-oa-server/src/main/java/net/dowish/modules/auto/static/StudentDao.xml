<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.dowish.modules.auto.dao.StudentDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="net.dowish.modules.auto.entity.StudentEntity" id="studentMap">
        <result property="${column.attrname}" column="id"/>
        <result property="${column.attrname}" column="name"/>
        <result property="${column.attrname}" column="address"/>
    </resultMap>

	<select id="queryObject" resultType="net.dowish.modules.auto.entity.StudentEntity">
		select * from student where id = #{value}
	</select>

	<select id="queryList" resultType="net.dowish.modules.auto.entity.StudentEntity">
		select * from student
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from student 
	</select>
	 
	<insert id="save" parameterType="net.dowish.modules.auto.entity.StudentEntity" useGeneratedKeys="true" keyProperty="$pk.attrname">
		insert into student
		(
			`name`, 
			`address`
		)
		values
		(
			#{$column.attrname}, 
			#{$column.attrname}
		)
	</insert>
	 
	<update id="update" parameterType="net.dowish.modules.auto.entity.StudentEntity">
		update student 
		<set>
			<if test="$column.attrname != null">`name` = #{$column.attrname}, </if>
			<if test="$column.attrname != null">`address` = #{$column.attrname}</if>
		</set>
		where id = #{${pk.attrname}}
	</update>
	
	<delete id="delete">
		delete from student where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from student where id in 
		<foreach item="${pk.attrname}" collection="array" open="(" separator="," close=")">
			#{${pk.attrname}}
		</foreach>
	</delete>

</mapper>